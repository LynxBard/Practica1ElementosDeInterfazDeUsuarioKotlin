<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".TextFieldsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextFields (Campos de Texto)"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Los EditText permiten a los usuarios ingresar y modificar texto."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <!-- Ejemplo de EditText básico -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EditText Básico:"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/editText_basic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresa texto aquí"
            android:inputType="text"
            android:layout_marginBottom="16dp"/>

        <!-- Ejemplo de EditText con tipo de entrada (Número) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EditText para Números:"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/editText_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresa un número"
            android:inputType="number"
            android:layout_marginBottom="16dp"/>

        <!-- Ejemplo de EditText con varias líneas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EditText Multilínea:"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/editText_multiline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresa texto largo"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:layout_marginBottom="16dp"/>

        <!-- Demostración Interactiva -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demostración Interactiva:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editText_interactive_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escribe algo aquí..."
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/button_show_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostrar Texto Ingresado"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textView_interactive_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="El texto aparecerá aquí."
            android:gravity="center"
            android:textSize="16sp"/>

    </LinearLayout>

</ScrollView>