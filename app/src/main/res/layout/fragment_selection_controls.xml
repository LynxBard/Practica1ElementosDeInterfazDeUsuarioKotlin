<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectionControlsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Elementos de Selección"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Permiten al usuario elegir una o más opciones de un conjunto."
            android:textSize="16sp"
            android:layout_marginBottom="24dp"/>

        <!-- CheckBox -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CheckBox"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Permite seleccionar múltiples opciones."
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/checkbox_opcion1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opción A"/>

        <CheckBox
            android:id="@+id/checkbox_opcion2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opción B"/>

        <TextView
            android:id="@+id/textView_checkbox_estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: Ninguna seleccionada"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- RadioButton -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RadioButton"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Permite seleccionar solo una opción de un grupo."
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/radioGroup_opciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButton_opcionX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opción X"/>

            <RadioButton
                android:id="@+id/radioButton_opcionY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opción Y"/>
        </RadioGroup>

        <TextView
            android:id="@+id/textView_radio_estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: Ninguna seleccionada"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Switch -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Switch"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Permite activar o desactivar una opción (estado binario)."
            android:layout_marginBottom="8dp"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_activar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activar funcionalidad"/>

        <TextView
            android:id="@+id/textView_switch_estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: Desactivado"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>